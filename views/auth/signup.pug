extends ../layouts/main-layout
block styles
   link(rel="stylesheet", href="/css/form.css")
block content
   main
      .container
         .row.justify-content-center
            .col.form-col
               .logoImg
                  img(src="/assets/images/BigLogo.png", alt="logo")

               form(class="form-frame" action="/signup" method="POST")
                  h3.text-left.headline Personal informations
                  div.form-group
                     label(for="username") Username
                     input(type="text" name="username" id="username" class="form-control")

                  div.form-group
                     label(for="email") Email
                     input(type="email" name="email" id="email" class="form-control")
                  
                  div.form-group
                     label(for="password") Password
                     input(type="text" name="password" id="password" class="form-control")

                  div.form-group
                     label(for="confirmPass") Confirm password
                     input(type="text" name="confirmPass" id="confirmPass" class="form-control")
                  
                  h3.text-left.headline.headline2 Contact informations
                  div.form-group.mb-5
                     label(for="address") Address
                     textarea(name="address" id="address", row="5" class="form-control")

                  button(class="btn btn-primary" type="submit") Signup
                  
                  input(type="hidden", name="_csrf", value= csrfToken)
            