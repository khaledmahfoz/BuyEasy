extends ../layouts/main-layout
block styles
   link(rel="stylesheet", href="/css/form.css")
block content
   main
      .container
         .row.justify-content-center
            .col.form-col
               .logoImg
                  img(src="/assets/images/BigLogo.png", alt="logo")

               form(class="form-frame" action="/signup" method="POST")
                  h3.text-left.headline Personal informations
                  -let error
                  div.form-group
                     -error = errors ? errors.find(err => err.param === "username") : null
                     label(for="username") Username
                     input.form-control(type="text" name="username" id="username" class= error ? "is-invalid" : ''
                     value= data ? data.username : '')
                     div.invalid-feedback #{error ? error.msg : ''}


                  div.form-group
                     -error = errors ? errors.find(err => err.param === "email") : null
                     label(for="email") Email
                     input.form-control(type="email" name="email" id="email" 
                     class= error ? 'is-invalid' : '' 
                     value= data ? data.email : '')
                     div.invalid-feedback #{error ? error.msg : ''}

                  div.form-group
                     -error = errors ? errors.find(err => err.param === "password") : null
                     label(for="password") Password
                     input.form-control(type="password" name="password" id="password" class= error ? 'is-invalid' : '')
                     div.invalid-feedback #{error ? error.msg : ''}

                  div.form-group
                     -error = errors ? errors.find(err => err.param === "confirmPass") : null
                     label(for="confirmPass") Confirm password
                     input.form-control(type="password" name="confirmPass" id="confirmPass" class= error ? "is-invalid" : "")
                     div.invalid-feedback #{error ? error.msg : ''}
                     
                  h3.text-left.headline.headline2 Contact informations
                  div.form-group.mb-5
                     -error = errors ? errors.find(err => err.param === "address") : null
                     label(for="address") Address
                     textarea.form-control(name="address" id="address", row="5" class= error ? 'is-invalid' : '') #{data ? data.address : ''}
                     div.invalid-feedback #{error ? error.msg : ''}

                  button(class="btn btn-primary" type="submit") Signup
                  
                  input(type="hidden", name="_csrf", value= csrfToken)
            